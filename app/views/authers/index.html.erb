<h1>著者一覧</h1>

<table>
  <thead>
    <tr>
      <th>著者名</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @authers.each do |auther| %>
      <tr>
        <td><%= auther.name %></td>
        <td><%= link_to '詳細', auther %></td>
        <td><%= link_to '編集', edit_auther_path(auther) %></td>
        <td><%= link_to '削除', auther, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

