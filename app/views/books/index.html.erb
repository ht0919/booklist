<p id="notice"><%= notice %></p>

<h1>書籍一覧</h1>

<table>
  <thead>
    <tr>
      <th>書名</th>
      <th>著者</th>
      <th>版元</th>
      <th>発行日</th>
      <th>定価</th>
      <th>ISBN</th>
      <th>購入日</th>
      <th>購入価格</th>
      <th>読了</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.auther.name %></td>
        <td><%= book.publisher.name %></td>
        <td><%= book.published %></td>
        <td><%= book.price %></td>
        <td><%= book.isbn %></td>
        <td><%= book.p_date %></td>
        <td><%= book.p_price %></td>
        <td><%= book.read ? '既読' : '未読' %></td>
        <td><%= link_to '詳細', book %></td>
        <td><%= link_to '編集', edit_book_path(book) %></td>
        <td><%= link_to '削除', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '書籍登録', new_book_path %> |
<%= link_to '著者一覧', controller: :authers, action: :index %> |
<%= link_to '版元一覧', controller: :publishers, action: :index %>
