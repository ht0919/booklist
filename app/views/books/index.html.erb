<p id="notice"><%= notice %></p>

<h1>Listing Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Auther</th>
      <th>Publisher</th>
      <th>Published</th>
      <th>Price</th>
      <th>Isbn</th>
      <th>P date</th>
      <th>P price</th>
      <th>Read</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.auther %></td>
        <td><%= book.publisher %></td>
        <td><%= book.published %></td>
        <td><%= book.price %></td>
        <td><%= book.isbn %></td>
        <td><%= book.p_date %></td>
        <td><%= book.p_price %></td>
        <td><%= book.read %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

