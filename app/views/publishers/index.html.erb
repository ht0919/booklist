<p id="notice"><%= notice %></p>

<h1>版元一覧</h1>

<table>
  <thead>
    <tr>
      <th>出版社</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @publishers.each do |publisher| %>
      <tr>
        <td><%= publisher.name %></td>
        <td><%= link_to '詳細', publisher %></td>
        <td><%= link_to '編集', edit_publisher_path(publisher) %></td>
        <td><%= link_to '削除', publisher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '版元登録', new_publisher_path %>
